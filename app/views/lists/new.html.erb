<h1>Add Bucket List</h1>
<%= form_with(model: @list, local: true) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, placeholder: "List Name" %>
  </div>
  <div class="field">
    <%= f.label :balance %>
    <%= f.number_field :balance, min: 0 %>
  </div>
  <%= f.submit class: "waves-effect waves-light btn" %>
<% end %>